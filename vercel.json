{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm run install:all",
  "framework": "vite",
  "outputDirectory": "packages/frontend/dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
} 