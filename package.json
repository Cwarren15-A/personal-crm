{
  "name": "personal-crm",
  "version": "1.0.0",
  "description": "Personal CRM with Microsoft 365 integration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd packages/backend && npm install",
    "install:frontend": "cd packages/frontend && npm install",
    "vercel-build": "npm run install:all && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@vercel/node": "^3.0.0"
  },
  "keywords": ["crm", "microsoft365", "personal", "contacts"],
  "author": "",
  "license": "MIT"
} 